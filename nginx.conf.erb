daemon off;
worker_processes auto;

<% if ENV["DEBUG"] %>
  error_log stderr debug;
<% end %>

events {
}

http {
  sendfile on;
  tcp_nopush on;

  client_body_timeout 5;
  keepalive_timeout 5;

  server_tokens off;
  port_in_redirect off;
  include /app/.local/etc/nginx/mime.types;
  default_type application/octet-stream;
  charset utf-8;

  gzip on;
  gzip_comp_level 6;
  gzip_min_length 512;
  gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
  gzip_vary on;
  gzip_proxied any;

  <% if ENV["DEBUG"] %>
    rewrite_log on;
  <% end %>

  server {
    listen <%= ENV.fetch("PORT", 3000) %> reuseport;

    <% if ENV["CANONICAL_HOST"] %>
      server_name <%= ENV["CANONICAL_HOST"] %>;
    <% end %>

    <% if ENV["HTTPS_ONLY"] %>
      if ($http_x_forwarded_proto != "https") {
        return 301 https://$host$request_uri;
      }
    <% end %>
  }

  <% if ENV["CANONICAL_HOST"] %>
    server {
      listen <%= ENV.fetch("PORT", 3000) %> default_server reuseport;
      server_name _;
      return 301 <%= ENV["HTTPS_ONLY"] ? "https" : "$scheme" %>://<%= ENV["CANONICAL_HOST"] %>$request_uri;
    }
  <% end %>
}
